{
    "name": "mugesh/calculator",
    "description": "A simple calculator package for PHP",
    "type": "library",
    "keywords": ["calculator", "math", "arithmetic"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mugesh",
            "email": "mugesh@example.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Mugesh\\Calculator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mugesh\\Calculator\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
